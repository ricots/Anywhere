<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anywhere"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/welcome"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.anywhere.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.anywhere.DestActivity"
            android:label="@string/title_activity_dest" >
        </activity>
        <activity
            android:name="com.example.anywhere.DepartPhotoActivity"
            android:label="@string/title_activity_depart_photo" >
        </activity>
        <activity
            android:name="com.example.anywhere.DestPhotoGetActivity"
            android:label="@string/title_activity_dest_photo" >
        </activity>
        <activity
            android:name="com.example.anywhere.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="com.example.anywhere.JavaWSActivity"
            android:label="@string/title_activity_java_ws" >
        </activity>
        <activity
            android:name="com.example.anywhere.ResetDepActivity"
            android:label="@string/title_activity_reset_dep" >
        </activity>
        <activity
            android:name="com.example.anywhere.UploadActivity"
            android:label="@string/title_activity_upload" >
        </activity>
        <activity
            android:name="com.example.anywhere.Upload2Activity"
            android:label="@string/title_activity_upload2" >
        </activity>
        <activity
            android:name="com.example.anywhere.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.anywhere.ChooseActivity"
            android:label="@string/title_activity_choose" >
        </activity>
        <activity
            android:name="com.example.anywhere.IndoorMapActivity"
            android:label="@string/title_activity_indoor_map" >
        </activity>
        <activity
            android:name="com.example.anywhere.IndoorActivity"
            android:label="@string/title_activity_indoor" >
        </activity>
    </application>

</manifest>